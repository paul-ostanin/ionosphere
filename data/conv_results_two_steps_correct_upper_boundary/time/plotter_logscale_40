set terminal png size 1600, 1200
set output "stationary_logscale_40.png"
set format x "%g"
set title "Stationary solutions (phi = 40)"
set xlabel "n, cm^{-3}"
set ylabel "z, km"
set xrange [1: 1.6e+07]
set logscale x
plot "step2_40_nz_80_nphi_180_tau_12_5.txt" using 2:1 wi li lw 2 title "tau = 12.5", "step2_40_nz_80_nphi_180_tau_25.txt" using 2:1 wi li lw 2 title "tau = 25", "step2_40_nz_80_nphi_180_tau_50.txt" using 2:1 wi li lw 2 title "tau = 50", "step2_40_nz_80_nphi_180_tau_100.txt" using 2:1 wi li lw 2 title "tau = 100"
