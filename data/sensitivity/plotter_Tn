set terminal png size 1024, 768 font "Helvetica, 20"
set output "2_Tn-sensitivity (log).png"
set format x "%g"
set title "Neutral temperature sensitivity"
set xlabel "n, cm^{-3}"
set xrange [1000: 5e+06]
set ylabel "z, km"
set logscale x
plot "Tn_08.txt" using 2:1 wi li linecolor rgb 'red' lw 2 title "-20%", "Tn_09.txt" using 2:1 wi li linecolor rgb 'blue' lw 2 title "-10%", "Tn_10.txt" using 2:1 wi li linecolor rgb 'black' lw 2 title "0%", "Tn_11.txt" using 2:1 wi li linecolor rgb 'green' lw 2 title "+10%", "Tn_12.txt" using 2:1 wi li linecolor rgb 'violet' lw 2 title "+20%"
