set terminal png size 1024, 768
set output "P-sensitivity (log).png"
set format x "%g"
set title "Photoionization sensitivity"
set xlabel "n, cm^{-3}"
set ylabel "z, km"
set logscale x
plot "P_08.txt" using 2:1 wi li lw 2 title "-20%", "P_09.txt" using 2:1 wi li lw 2 title "-10%", "P_10.txt" using 2:1 wi li lw 2 title "0%", "P_11.txt" using 2:1 wi li lw 2 title "+10%", "P_12.txt" using 2:1 wi li lw 2 title "+20%"
