set terminal png size 1600, 1200
set output "stationary_40_nz_phi_180.png"
set format x "%g"
set title "Convergence in z (180 nodes in phi), phi = 40"
set xlabel "n, cm^{-3}"
set ylabel "z, km"
set logscale x
plot "step2_40_nz_80_nphi_180_tau_5.txt" using 2:1 wi li lw 2 title "Nz = 80", "step2_40_nz_200_nphi_180_tau_5.txt" using 2:1 wi li lw 2 title "Nz = 200", "step2_40_nz_400_nphi_180_tau_5.txt" using 2:1 wi li lw 2 title "Nz = 400"
